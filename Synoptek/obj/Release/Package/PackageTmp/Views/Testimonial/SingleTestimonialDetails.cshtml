@model BusinessObjects.TestimonialModel

@{
    ViewBag.Title = "Details";
}

<h3 style="margin-left: -2px;">@Html.DisplayFor(model => model.Author)</h3>

<p style="margin-bottom: 20px; padding-top: 20px;">
    @Html.ActionLink("Back", "GetAllTestimonial", "Testimonial", null, new { @class = "btn btn-default" })
</p>

<div class="fieldset" style="margin-left: 20px;">

    <div class="form-group">
        <img src="@ViewBag.Logo"  width="300" height="300" class="thumb-image"/>
        <div class="clearfix"></div>
    </div>

    <div class="form-group">
        <div>@Html.Raw(Model.Description)</div>
        @Html.HiddenFor(model => model.Description, new { id = "hdnDescription" })
        <div class="clearfix"></div>
    </div>

    @*<input type="button" value="Back" class="btn btn-primary btn-small" onclick="location.href='@Url.Action("GetAllTestimonial", "Testimonial")    '" />*@
</div>

