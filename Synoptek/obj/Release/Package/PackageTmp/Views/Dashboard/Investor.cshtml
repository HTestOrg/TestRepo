@model PagedList.IPagedList<BusinessObjects.InvestorDashboardModel>

<div class="signUpBlog">
    <div class="container">
        <div class="row">
            <div class="col-md-6 ResponviseCenter">
                <h2>My Investments</h2>
            </div>
        </div>
    </div>
</div>

<div class="ActionBar mb-5">
    <ul class="nav justify-content-center" id="pills-tab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="pill" href="#pills-active" role="tab" aria-controls="pills-active" aria-selected="true" id="li_Active">ACTIVE</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="pill" href="#pills-favorites" role="tab" aria-controls="pills-favorites" aria-selected="false" id="li_Favorites">FAVORITES</a>
        </li>
    </ul>
</div>
<div class="tab-content mb-5 educationPage" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-active" role="tabpanel" aria-labelledby="pills-active-tab">
        <div class="container">
            <div id="DivActiveContent">
                @Html.Partial("_InvestorMyListings", Model)
            </div>
        </div>
    </div>
</div>
 
<script>
    $(document).ready(function () {
        $("#li_Active").on('click', function () {
            $.ajax({
                url: "Investor",
                data: { listingStatus: "Active" },
                success: function (res) {
                    $("#DivActiveContent").html(res);
                }
            });
        });
        $("#li_Favorites").on('click', function () {
            $.ajax({
                url: "Investor",
                data: { listingStatus: "Favorite" },
                success: function (res) {
                    $("#DivActiveContent").html(res);
                }
            });
        });
    });
</script>
