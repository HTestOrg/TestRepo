@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="educationPage">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-md-10">
                    <h2 class="pt-4">@Model.ExperienceLevelName - @Model.Name</h2>
