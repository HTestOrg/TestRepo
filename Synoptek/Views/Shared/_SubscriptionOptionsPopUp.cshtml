@model BusinessObjects.SubscriptionOptionsList
@{string objJson; }
<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
<style>
    body {
        font-family: 'Open Sans', sans-serif;
        /*background: #888;*/
    }

    * {
        box-sizing: border-box;
    }

    .clearfix:after {
        content: '';
        clear: both;
        display: block;
    }

    #SubscriptionpModal .modal-dialog {
        max-width: 850px;
    }

    .popup {
        background: #fff;
        width: 100%;
        padding: 20px 0;
        overflow: hidden;
        font-size: 14px;
    }

 

        .popup .popup_cnt {
            background: #fcfcfc;
            border-top: 1px solid #f1f1f1;
            border-bottom: 1px solid #f1f1f1;
            float: left;
            width: 33.3333%;
            padding: 10px 10px 0;
            text-align: center;
            color: #999;
        }

        .popup .popup_heder {
            min-height: 50px;
        }

            .popup .popup_heder h3 {
                margin: 0;
                text-transform: uppercase;
                font-family: 'Open Sans', sans-serif;
                font-weight: 900;
            }

        .popup .popup_middle {
            min-height: 115px;
        }

        .popup .price {
            font-weight: bold;
            max-width: 50%;
            margin: 0 auto;
            border-bottom: 1px solid #ccc;
        }

            .popup .price span {
                font-size: 40px;
                color:#6b6565;
            }

        .popup .popup_footer {
            padding: 10px;
        }

            .popup .popup_footer button {
                background: #858585;
                color: #fff;
                border-radius: 50px;
                border: 0;
                padding: 6px;
                text-transform: uppercase;
                font-weight: bold;
                width: 140px;
                cursor: pointer;
            }

        .popup .popup_cnt.popup_hilit .popup_footer button {
            padding: 10px;
            width: 190px;
            background: #357e96;
        }

        .popup .popup_footer button:hover {
            background: #000 !important;
        }

        .popup .popup_cnt.popup_hilit {
            background: #fff;
            box-shadow: 0 0 5px 0 rgba(0,0,0,.3);
            position: relative;
            margin: -20px 0;
            border: 0;
            color: #000;
            padding: 10px;
        }

            .popup .popup_cnt:hover {
                background: #F1F1F1;
            }

            .popup .popup_cnt.popup_hilit .popup_middle {
                margin-bottom: 20px;
            }

            .popup .popup_cnt.popup_hilit .price span {
                color: #000;
            }

    span.bill_saving {
        font-size: 15px;
        text-decoration: line-through;
    }

    .billing {
        font-size: 13px;
        color: rgba(30, 140, 204, 1);
        padding: 10px;
        min-height: 60px;
        font-weight: 600;
    }

    .popup .popup_cnt.popup_hilit .your_save {
        font-weight: 600;
        color: #25ba76;
    }

    .your_save {
        font-weight: 600;
        min-height: 25px;
    }

    .popup_label {
        position: absolute;
        top: 0;
        right: 0;
    }
</style>

<div class="popup clearfix" style="border: 4px solid #374a4e; box-shadow: 5px 5px #0f3d4e; border-radius:43px">
    @for (int i = 0; i < Model.Subscriptions.Count(); i++)
    {

        objJson = Html.Raw(Json.Encode(Model.Subscriptions[i])).ToString();
        if (i == 1)
        {
            <div class="popup_cnt popup_hilit">
                <div class="popup_heder">
                    <h3 style="color:cadetblue">@Model.Subscriptions[i].Caption</h3>
                    <span class="bill_saving"> @Model.Subscriptions[i].BillSavingAmount</span>
                </div>
                <div class="popup_middle">
                    <div class="price">$ <span>@Model.Subscriptions[i].AmountPerMonth</span> /mo </div>
                    <div class="billing">Billed <span class="bill_amt">$@Model.Subscriptions[i].Amount </span><span class="bill_saving"> @Model.Subscriptions[i].BillSavingAmount</span> @Model.Subscriptions[i].BillingCycle</div>
                    <div class="your_save">@Model.Subscriptions[i].Save</div>
                </div>

                <img src="~/images/best-value.png" alt="" class="popup_label">


                <div class="popup_footer">

                    <button id="subscriptionButton" type="button" onclick="showPaymentPopUp(@objJson);"> Start Now </button>
                </div>
            </div>
        }
        else
        {
            <div class="popup_cnt ">
                <div class="popup_heder">
                    <h3 style="color:cadetblue">@Model.Subscriptions[i].Caption</h3>
                    <span class="bill_saving"> @Model.Subscriptions[i].BillSavingAmount</span>
                </div>
                <div class="popup_middle">
                    <div class="price">$ <span>@Model.Subscriptions[i].AmountPerMonth</span> /mo </div>
                    <div class="billing">Billed <span class="bill_amt">$@Model.Subscriptions[i].Amount </span><span class="bill_saving"> @Model.Subscriptions[i].BillSavingAmount</span> @Model.Subscriptions[i].BillingCycle</div>
                    <div class="your_save">@Model.Subscriptions[i].Save</div>
                </div>


                <div class="popup_footer">

                    <button id="subscriptionButton" type="button" onclick="showPaymentPopUp(@objJson);"> Start Now </button>
                </div>
            </div>
        }


    }

</div>










