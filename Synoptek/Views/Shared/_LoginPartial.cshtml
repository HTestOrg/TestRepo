<script>

    $(document).on('click', "#lnklogin", function () {
        var redirectURL = window.location.href;
        $('#hdnRedirectURL').html(redirectURL);

        $.ajax({
            url: "/Login/Login",
            success: function (result) {
                $("#LoginModal").modal();
                $("#loginContent").html(result);
            }
        });
    });

